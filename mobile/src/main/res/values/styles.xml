<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/mold</item>

        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/ActionBarSpinnerItem</item>
    </style>

    <style name="ActionBarSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/ActionBarTextAppearanceSpinnerItem</item>
    </style>

    <style name="ActionBarTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/action_bar_spinner_text_size</item>
    </style>

    <style name="VendorHud">
        <item name="android:textColor">@color/mold</item>
        <item name="android:textSize">@dimen/vendor_hud_text_size</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.ListItemLine1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ListItemLine2">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
